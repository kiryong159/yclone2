extends base.pug

block contents 
    video(src=`/${video.fileUrl}` controls width=900 height=500)

    div 
        ul
            li
                span 비디오 타이틀#{video.title}
            li
                span 비디오 주인 #{video.owner.name}  

    if String(loggedInuser._id) === String(video.owner._id)
        ul
            li
                a(href=`/video/${video._id}/edit`) Edit Video
            li  
                a(href=`/video/${video._id}/delete`) Delete Video
    div
        form
            textarea(name="comment", cols="30", rows="10")
            input(type="submit" value="댓달기") 
